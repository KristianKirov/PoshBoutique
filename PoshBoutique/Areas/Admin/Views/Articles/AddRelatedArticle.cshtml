@model PoshBoutique.Data.Article
@{
    ViewBag.Title = "AddRelatedArticle";
}

<h2>Добави подобен артикул</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Article Categories</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.DisplayFor(a => a.Title)
            <div class="col-md-10">
                @Html.DisplayFor(a => a.Title)
            </div>
        </div>

        <div class="form-group">
            @Html.DisplayFor(a => a.ThumbnailUrl)
            <div class="col-md-10">
                <img src="@Model.ThumbnailUrl" width="100" />
            </div>
        </div>

        <div class="form-group">
            <label for="CategoryId" class="control-label col-md-2">Подобен артикул</label>
            <div class="col-md-10">
                @Html.DropDownList("RelatedArticleId", String.Empty)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Създай" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Articles", "Index", "Articles")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
