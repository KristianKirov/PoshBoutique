@model IEnumerable<PoshBoutique.Data.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DeliveryMerchant)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeliveryPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HasCommission)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommissionPercents)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShippingPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemsPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderStatus.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DeliveryMerchant)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeliveryPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HasCommission)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommissionPercents)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShippingPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemsPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderStatus.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
