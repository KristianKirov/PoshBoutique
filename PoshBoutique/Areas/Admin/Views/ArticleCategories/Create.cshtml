@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Article Categories</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label for="ArticleId" class="control-label col-md-2">Article</label>
            <div class="col-md-10">
                @Html.DropDownList("ArticleId", String.Empty)
            </div>
        </div>

        <div class="form-group">
            <label for="CategoryId" class="control-label col-md-2">Category</label>
            <div class="col-md-10">
                @Html.DropDownList("CategoryId", String.Empty)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Articles", "Index", "Articles")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
